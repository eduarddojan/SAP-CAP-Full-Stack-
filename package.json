{
  "name": "supplier-contract",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^2.8.0",
    "@sap/cds": "^6",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.6.0",
    "sqlite3": "^5.0.4"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.5",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-suppliercontract": "cds watch --open suppliercontract/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy supplier-contract --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/suppliercontract"
  ],
  "cds": {
    "requires": {
    "db": {
        "kind": "sqlite",
        "credentials": {
            "database": ":memory:"
        }
        },
      "approuter": {
        "kind": "cloudfoundry"
      },
      "byd_suppliers": {
        "kind": "odata-v2",
        "model": "srv/external/byd_suppliers",
        "credentials": {
            "destination": "EDNC_BYD_PDI",
            "path": "/sap/byd/odata/cust/v1/querysuppliers"
        }
      },
      "byd_product_categories": {
        "kind": "odata-v2",
        "model": "srv/external/byd_product_categories",
        "credentials": {
            "destination": "EDNC_BYD_PDI",
            "path": "/sap/byd/odata/cust/v1/queryproductcategories"
        }
      }
    },
    "features": {
        "in_memory_db": true
    }
  }
}